<%- include("partials/head.ejs") %> <%- include("partials/header.ejs") %>

<main>
  <h1>Todos App</h1>
  <a href="/todo/new"><button>Create Todo</button></a>
  <ul>
    <% todos.forEach((todo, index) =>{ %>
    <a href="/todo/<%= todo._id %>">
      <li class="todo <%= todo.completed ? 'completed' : null %>">
        <%= todo.message %>
      </li>
    </a>
    <% }) %>
  </ul>
</main>
